<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vijaicv.youcuredme.articleview"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/artimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy"/>
    <TextView
        android:text="title"
        android:id="@+id/title_of_article"
        android:textColor="#000"
        android:textStyle="bold|italic"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="content"
        android:id="@+id/content_of_article"
        android:textColor="#000"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="content"
        android:id="@+id/upvotes_of_article"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="content"
        android:layout_marginLeft="10dp"
        android:id="@+id/opinion_of_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
